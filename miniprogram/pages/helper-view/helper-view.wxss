/* components/helper-view/helper-view.wxss */
.page {
  position: relative;
  z-index: 0;
  height: 100vh;
  width: 100vw;
  color: #425066;
}

.gl,
.camera,
.canvas {
  width: 100vw;
  height: 90vh;
  position: absolute;
  bottom: 0;
  left: 0;
}

.canvas.canvas-input {
  left: -100vw;
}

.info-can {
  height: 10vh;
  width: 100vw;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-item {
  margin: 0 5px;
}

.btn {
  padding: 5px;
  border: 2px solid #ff9100;
  border-radius: 5px;
  margin: 0 5px;
}

.btn[data-on='true'] {
  color: white;
  background-image: linear-gradient(to right, #ff6f00, #ff9100);
}

.radio {
  margin: 5px;
  border-width: 2px;
  border-color: transparent;
  border-style: solid;
  border-radius: 3px;
}

.radio[data-active='true']{
  border-bottom-color: #ff9100;
}